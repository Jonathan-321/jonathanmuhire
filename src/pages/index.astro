---
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'

const blog = await getRecentPosts(3)
---

<Layout class="max-w-none">
  <PageHead slot="head" title="Home" />
  
  <style>
    /* Smooth scrolling */
    html {
      scroll-behavior: smooth;
      scroll-snap-type: y proximity;
    }
    
    /* Full-page sections */
    .page-section {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 4rem 2rem;
      max-width: 1200px;
      margin: 0 auto;
      position: relative;
      scroll-snap-align: start;
    }
    
    /* First page - intro */
    .intro-page {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      overflow: hidden;
      background-color: var(--background);
      background-image:
        radial-gradient(circle at 15% 15%, rgba(94, 234, 212, 0.2), transparent 55%),
        radial-gradient(circle at 80% 20%, rgba(56, 189, 248, 0.18), transparent 50%),
        radial-gradient(circle at 70% 80%, rgba(129, 140, 248, 0.12), transparent 50%),
        url('/static/circuit-board-dark.svg');
      background-size: 120% 120%, 140% 140%, 160% 160%, 720px 720px;
      background-position: 10% 0%, 80% 10%, 60% 80%, center;
    }
    
    [data-theme="light"] .intro-page {
      background-image:
        radial-gradient(circle at 15% 15%, rgba(14, 116, 144, 0.12), transparent 55%),
        radial-gradient(circle at 80% 20%, rgba(30, 64, 175, 0.1), transparent 50%),
        radial-gradient(circle at 70% 80%, rgba(79, 70, 229, 0.08), transparent 50%),
        url('/static/circuit-board-light.svg');
    }
    
    /* Hero */
    .hero-grid {
      width: 100%;
      display: grid;
      grid-template-columns: 3fr 2fr;
      gap: 3rem;
      align-items: center;
    }
    
    .hero-content {
      padding: 3rem;
      max-width: 720px;
    }
    
    .hero-eyebrow {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      color: var(--muted-foreground);
      margin-bottom: 1.25rem;
    }
    
    .hero-title {
      font-size: clamp(2rem, 4vw, 3.25rem);
      font-weight: 400;
      line-height: 1.1;
      color: var(--foreground);
      margin-bottom: 1rem;
    }
    
    .hero-tagline {
      font-size: 1.125rem;
      line-height: 1.6;
      color: var(--foreground);
      margin-bottom: 0.75rem;
    }
    
    .hero-subtext {
      font-size: 0.9rem;
      line-height: 1.6;
      color: var(--muted-foreground);
    }
    
    .hero-list {
      list-style: none;
      padding: 0;
      margin: 1.5rem 0 2rem;
      display: grid;
      gap: 0.75rem;
      color: var(--foreground);
    }
    
    .hero-list li {
      display: flex;
      gap: 0.75rem;
      align-items: flex-start;
      font-size: 0.95rem;
      line-height: 1.5;
    }
    
    .hero-list li::before {
      content: '-';
      color: var(--muted-foreground);
      margin-top: 0.1rem;
    }
    
    .hero-cta {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
    }
    
    .cta {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.65rem 1.1rem;
      border-radius: 999px;
      text-decoration: none;
      font-size: 0.85rem;
      border: 1px solid var(--border);
      transition: all 0.2s ease;
    }
    
    .cta.primary {
      background: var(--foreground);
      color: var(--background);
      border-color: transparent;
    }
    
    .cta.primary:hover {
      opacity: 0.9;
    }
    
    .cta.secondary {
      background: var(--background);
      color: var(--foreground);
    }
    
    .cta.secondary:hover {
      border-color: var(--foreground);
    }
    
    .cta.ghost {
      background: transparent;
      color: var(--muted-foreground);
    }
    
    .cta.ghost:hover {
      color: var(--foreground);
      border-color: var(--foreground);
    }
    
    .hero-chips {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }
    
    .chip {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      padding: 0.35rem 0.6rem;
      border-radius: 999px;
      border: 1px solid var(--border);
      color: var(--muted-foreground);
      background: color-mix(in oklch, var(--background), var(--foreground) 3%);
    }
    
    .hero-card {
      background: color-mix(in oklch, var(--background), var(--foreground) 4%);
      border: 1px solid var(--border);
      padding: 2rem;
      border-radius: 20px;
      backdrop-filter: blur(6px);
    }
    
    .card-label {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      color: var(--muted-foreground);
      margin-bottom: 0.75rem;
    }
    
    .card-list {
      list-style: none;
      padding: 0;
      margin: 0 0 1.5rem 0;
      display: grid;
      gap: 0.75rem;
      font-size: 0.9rem;
      color: var(--foreground);
    }
    
    .card-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }
    
    .card-tag {
      font-size: 0.7rem;
      padding: 0.25rem 0.5rem;
      border-radius: 999px;
      border: 1px solid var(--border);
      color: var(--muted-foreground);
    }
    
    
    /* Scroll indicator */
    .scroll-indicator {
      position: absolute;
      bottom: 2rem;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      opacity: 0.6;
      transition: opacity 0.3s ease;
      cursor: pointer;
      text-decoration: none;
      color: var(--muted-foreground);
    }
    
    .scroll-indicator:hover {
      opacity: 1;
      color: var(--foreground);
    }
    
    .scroll-text {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--muted-foreground);
    }
    
    .scroll-arrow {
      width: 1px;
      height: 40px;
      background: var(--border);
      position: relative;
      overflow: hidden;
    }
    
    .scroll-arrow::after {
      content: '';
      position: absolute;
      top: -100%;
      left: 0;
      width: 100%;
      height: 50%;
      background: var(--foreground);
      animation: scrollDown 2s infinite;
    }
    
    @keyframes scrollDown {
      0% {
        transform: translateY(-100%);
      }
      50% {
        transform: translateY(200%);
      }
      100% {
        transform: translateY(200%);
      }
    }
    
    /* Featured */
    .nav-section {
      display: grid;
      grid-template-columns: 2.2fr 1fr;
      gap: 4rem;
      width: 100%;
      align-items: start;
    }
    
    .section-label {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--muted-foreground);
      margin-bottom: 1.5rem;
    }
    
    .section-title {
      font-size: 1.5rem;
      font-weight: 400;
      margin-bottom: 1.25rem;
      color: var(--foreground);
    }
    
    .section-lede {
      font-size: 0.95rem;
      color: var(--muted-foreground);
      max-width: 520px;
      margin-bottom: 2rem;
    }
    
    .featured-grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 1.5rem;
    }
    
    .featured-card {
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 1.5rem;
      background: color-mix(in oklch, var(--background), var(--foreground) 3%);
      transition: border-color 0.2s ease, transform 0.2s ease;
    }
    
    .featured-card:hover {
      border-color: var(--foreground);
      transform: translateY(-2px);
    }
    
    .featured-title {
      font-size: 1rem;
      font-weight: 500;
      color: var(--foreground);
      text-decoration: none;
    }
    
    .featured-desc {
      font-size: 0.9rem;
      color: var(--muted-foreground);
      margin: 0.75rem 0 1rem;
      line-height: 1.5;
    }

    .featured-evidence {
      font-size: 0.8rem;
      color: var(--muted-foreground);
      margin: 0 0 0.9rem;
      line-height: 1.5;
    }

    .featured-evidence a {
      color: inherit;
      text-decoration: none;
      border-bottom: 1px dotted var(--border);
    }

    .featured-evidence a:hover {
      color: var(--foreground);
    }
    
    .featured-meta {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: var(--muted-foreground);
      margin-bottom: 0.75rem;
    }
    
    .featured-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 0.75rem;
    }
    
    .featured-tag {
      font-size: 0.7rem;
      padding: 0.25rem 0.5rem;
      border-radius: 999px;
      border: 1px solid var(--border);
      color: var(--muted-foreground);
    }
    
    .featured-links {
      display: flex;
      gap: 1rem;
    }
    
    .featured-link {
      font-size: 0.8rem;
      color: var(--muted-foreground);
      text-decoration: none;
    }
    
    .featured-link:hover {
      color: var(--foreground);
    }
    
    /* Side profiles */
    .profiles-section {
      border-left: 1px solid var(--border);
      padding-left: 3rem;
    }
    
    .profile-link {
      display: block;
      font-size: 0.875rem;
      color: var(--foreground);
      text-decoration: none;
      padding: 0.5rem 0;
      transition: opacity 0.2s ease;
    }
    
    .profile-link:hover {
      opacity: 0.6;
    }
    
    .skills-list {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 1rem;
    }
    
    .skill-pill {
      font-size: 0.7rem;
      padding: 0.35rem 0.6rem;
      border-radius: 999px;
      border: 1px solid var(--border);
      color: var(--muted-foreground);
    }
    
    .proof-strip {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 1rem;
    }
    
    .proof-pill {
      font-size: 0.7rem;
      padding: 0.3rem 0.6rem;
      border-radius: 999px;
      border: 1px dashed var(--border);
      color: var(--muted-foreground);
      text-transform: uppercase;
      letter-spacing: 0.06em;
    }
    
    /* Visual systems */
    .visuals-section {
      width: 100%;
      max-width: 1100px;
    }
    
    .visuals-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }
    
    .visual-card {
      border: 1px solid var(--border);
      border-radius: 18px;
      padding: 1.5rem;
      background: color-mix(in oklch, var(--background), var(--foreground) 3%);
      display: grid;
      gap: 0.75rem;
    }
    
    .visual-title {
      font-size: 0.95rem;
      font-weight: 500;
      color: var(--foreground);
    }
    
    .visual-desc {
      font-size: 0.85rem;
      color: var(--muted-foreground);
      line-height: 1.5;
    }
    
    .diagram {
      width: 100%;
      height: 210px;
      color: color-mix(in oklch, var(--foreground), var(--background) 70%);
    }
    
    .methods-row {
      display: flex;
      flex-wrap: wrap;
      gap: 0.6rem;
      margin-top: 1.5rem;
    }
    
    .method-pill {
      font-size: 0.7rem;
      padding: 0.35rem 0.6rem;
      border-radius: 999px;
      border: 1px solid var(--border);
      color: var(--muted-foreground);
      text-transform: uppercase;
      letter-spacing: 0.06em;
      text-decoration: none;
      position: relative;
      transition: border-color 0.15s ease, color 0.15s ease;
    }
    
    .method-pill::after {
      content: '↗';
      font-size: 0.75rem;
      margin-left: 0.25rem;
      color: var(--muted-foreground);
    }
    
    .method-pill:hover {
      border-color: var(--foreground);
      color: var(--foreground);
    }
    
    /* Projects page */
    .projects-container {
      width: 100%;
      max-width: 800px;
    }
    
    .project-grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }
    
    .project-card {
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 1.5rem;
      background: color-mix(in oklch, var(--background), var(--foreground) 3%);
    }
    
    .project-meta {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--muted-foreground);
      margin-bottom: 0.5rem;
    }
    
    .project-card h3 {
      font-size: 1rem;
      font-weight: 500;
      margin-bottom: 0.5rem;
    }
    
    .project-summary {
      font-size: 0.9rem;
      color: var(--muted-foreground);
      line-height: 1.5;
      margin-bottom: 1rem;
    }
    
    .project-stack {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 0.75rem;
    }
    
    .project-stack span {
      font-size: 0.7rem;
      padding: 0.25rem 0.5rem;
      border-radius: 999px;
      border: 1px solid var(--border);
      color: var(--muted-foreground);
    }
    
    .project-actions {
      display: flex;
      gap: 1rem;
    }

    .project-actions span {
      font-size: 0.8rem;
      color: var(--muted-foreground);
    }
    
    .project-actions a {
      font-size: 0.8rem;
      color: var(--muted-foreground);
      text-decoration: none;
    }
    
    .project-actions a:hover {
      color: var(--foreground);
    }
    
    .details-block {
      margin-top: 2.5rem;
      border: 1px dashed var(--border);
      border-radius: 16px;
      padding: 1rem 1.5rem;
      background: color-mix(in oklch, var(--background), var(--foreground) 2%);
    }
    
    .details-block summary {
      cursor: pointer;
      font-size: 0.9rem;
      color: var(--foreground);
      list-style: none;
    }
    
    .details-block summary::-webkit-details-marker {
      display: none;
    }
    
    .details-content {
      margin-top: 1.5rem;
    }
    
    /* Year sections */
    .year-section {
      margin-bottom: 4rem;
    }
    
    .muted-year {
      opacity: 0.75;
    }
    
    .year-header {
      font-size: 1.5rem;
      font-weight: 300;
      color: var(--muted-foreground);
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--border);
      letter-spacing: 0.05em;
    }
    
    .projects-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    
    .project-entry {
      display: grid;
      grid-template-columns: 1fr 100px;
      gap: 2rem;
      padding: 1.5rem 0;
      border-bottom: 1px solid var(--border);
      align-items: baseline;
    }
    
    .project-year {
      display: none;
    }
    
    .project-entry:last-child {
      border-bottom: none;
    }
    
    .project-year {
      font-size: 0.875rem;
      color: var(--muted-foreground);
      font-variant-numeric: tabular-nums;
    }
    
    .project-entry.year-2024 .project-year {
      color: #666;
    }
    
    .project-entry.year-2024 .project-title {
      opacity: 0.85;
    }
    
    .project-entry.year-2024 .project-description {
      opacity: 0.9;
    }
    
    .project-info {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .project-title {
      font-size: 1.125rem;
      font-weight: 400;
      color: var(--foreground);
      text-decoration: none;
      transition: opacity 0.2s ease;
    }
    
    .project-title:hover {
      opacity: 0.6;
    }
    
    .project-description {
      font-size: 0.875rem;
      color: var(--muted-foreground);
      line-height: 1.6;
    }
    
    .project-links {
      display: flex;
      gap: 1rem;
      margin-top: 0.25rem;
    }
    
    .project-link {
      font-size: 0.8rem;
      color: var(--muted-foreground);
      text-decoration: none;
      transition: all 0.2s ease;
      position: relative;
    }
    
    .project-link::after {
      content: '↗';
      margin-left: 0.25rem;
      font-size: 0.7rem;
    }
    
    .project-link:hover {
      color: var(--foreground);
    }
    
    .project-tech {
      font-size: 0.75rem;
      color: var(--muted-foreground);
      text-align: right;
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }
    
    /* Writing page */
    .writing-list {
      width: 100%;
      max-width: 600px;
    }
    
    .post-item {
      padding: 2rem 0;
      border-bottom: 1px solid var(--border);
    }
    
    .post-item:last-child {
      border-bottom: none;
    }
    
    .post-date {
      font-size: 0.75rem;
      color: var(--muted-foreground);
      margin-bottom: 0.5rem;
    }
    
    .post-title {
      font-size: 1.125rem;
      font-weight: 400;
    }
    
    .post-desc {
      font-size: 0.9rem;
      color: var(--muted-foreground);
      margin-top: 0.5rem;
      line-height: 1.5;
    }
    
    .contact-card {
      margin-top: 2rem;
      border: 1px solid var(--border);
      border-radius: 20px;
      padding: 2rem;
      background: color-mix(in oklch, var(--background), var(--foreground) 3%);
      display: grid;
      gap: 1.5rem;
    }
    
    .contact-actions {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
    }
    
    @media (max-width: 768px) {
      .page-section {
        padding: 3rem 1.5rem;
      }
      
      .hero-grid {
        grid-template-columns: 1fr;
      }
      
      .hero-content {
        padding: 2rem;
      }
      
      .hero-card {
        order: 2;
      }
      
      .nav-section {
        grid-template-columns: 1fr;
      }
      
      .profiles-section {
        border-left: none;
        border-top: 1px solid var(--border);
        padding-left: 0;
        padding-top: 2rem;
      }
      
      .featured-grid {
        grid-template-columns: 1fr;
      }
      
      .visuals-grid {
        grid-template-columns: 1fr;
      }
      
      .project-entry {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
      
      .project-grid {
        grid-template-columns: 1fr;
      }
      
      .year-header {
        font-size: 1.25rem;
      }
      
      .project-year {
        order: -1;
        margin-bottom: 0.5rem;
      }
      
      .project-tech {
        text-align: left;
        flex-direction: row;
        gap: 1rem;
        margin-top: 0.5rem;
      }
    }
  </style>
  
